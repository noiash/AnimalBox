<h1>ペット編集</h1>
<%= form_with model: @pet, local: true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %><br/>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像" %><br/>

  <%= f.label :sex %><br />
  <%= f.label :man %>
  <%= f.radio_button :sex, :man %>
  <%= f.label :woman %>
  <%= f.radio_button :sex, :woman %><br/>

  <label for="inputAge">Age</label>
  <%= f.text_field :age, autofocus: true, id: "inputAge", placeholder: "年齢" %><br/>

  <label for="inputType">Type</label>
  <%= f.text_field :type, autofocus: true, id: "inputType", placeholder: "種類" %><br/>

  <%= f.submit "変更を保存する" %>

<% end %>