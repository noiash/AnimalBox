<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with(model: @relationship, url: relationship_path(user.id), method: :delete, remote: true) do |f| %>
      <%= f.hidden_field :follow_id, value: user.id %>
      <%= f.submit 'unfollow' %>
    <% end %>
  <% else %>
    <%= form_with model: @set_relationship, url: relationships_path, remote: true do |f| %>
      <%= f.hidden_field :follow_id, value: user.id %>
      <%= f.submit 'Follow' %>
    <% end %>
  <% end %>

  <%= link_to "フォロー： #{@user.followings.count}", followings_user_path(@user.id) %>
  <%= link_to "フォロワー： #{@user.followers.count}", followers_user_path(@user.id) %>

<% end %>

