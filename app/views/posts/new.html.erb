<div class="containeer">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center pt-5 pb-3">新規投稿</h2>
    </div>
  </div>

  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <% @post.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-12 pt-3">
    <%= form_with model: @post, url: posts_path, local: true do |f| %>

  <div class="row">
    <div class="col-md-5">
      <p class="text-right mr-4"><label for="Image" class="form-label">画像→</label></p>
      <p class="text-right mr-4 new-text">↑どちらかを選択して下さい↓</p>
      <p class="text-right mr-4"><label for="Video" class="form-label">動画→</label></p>
    </div>
    <div class="col-md-4">
      <p class="text-center"><%= f.file_field :image_id, accept: 'image/jpeg, image/gif, image/png' %></p>
      <p class="text-center mt-5"><%= f.file_field :video_id, :accept => 'video/*' %></p>
    </div>
  </div>


  <div class="row">
    <div class="col-md-5">
      <p class="text-right mr-4"><label for="Title" class="form-label">タイトル</label></p>
    </div>
  <div class="col-md-4">
      <p class="text-center"><%= f.text_field :title, autofocus: true, class: 'form-control' %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <p class="text-right mr-4"><label for="Capture" class="form-label">本文</label></p>
    </div>
  <div class="col-md-4">
      <p class="text-center"><%= f.text_area :introduction, autofocus: true, class: 'form-control' %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <p class="text-right mr-4"><label for="Tag" class="form-label">タグ</label></p>
    </div>
  <div class="col-md-4">
      <p class="text-center"><%= f.text_field :tag_name, autofocus: true, class: 'form-control', placeholder: '半角・全角スペースを入れるとタグをいくつかつけられます。' %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-5">
    </div>
    <div class="col-4">
      <p class="text-right"><%= f.submit "投稿する", class: 'btn btn-primary' %></p>
    </div>
  </div>

    <% end %>
    </div>
  </div>
</div>