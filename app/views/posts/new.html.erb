<h1>新規投稿フォーム</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @post, url: posts_path, local: true do |f| %>
  <h4>画像または動画</h4>
  <%= f.file_field :image_id, accept: 'image/jpeg, image/gif, image/png' %><%= f.file_field :video_id, :accept => 'video/*'%>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :introduction %>
  <h4>タグ</h4>
  <%= f.text_field :tag_name %>

  <%= f.submit '投稿' %>

<% end %>