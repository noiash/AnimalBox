<h1>投稿一覧</h1>
<div>
  <h4>タグリスト</h4>
  <% @tag_list.each do |list| %>
    <%= link_to tag_posts_path(tag_id: list.id) do %>
      <%= list.tag_name %>
    <% end %>
  <% end %>
</div>

<% @search_posts.each do |post| %>
<div>
<%= link_to post_path(post.id) do %>
  <% if post.image_id.present? %>
    <%= image_tag post.image_id.url, :size => '320x240' %>
  <% else %>
    <%= video_tag(post.video_id.to_s, :controls => true, :size => '320x240') %>
  <% end %>
<% end %>
  <p><%= post.created_at %></p>
  <p><%= post.title %></p>
  <p><%= post.introduction %></p>
  <p><%= sanitize(post.tags.pluck(:tag_name).join(' ')) %>

  <%# post.tags.each do |tag| %>
    <%#= tag.tag_name %>
  <%# end %>
  </p>
  <p><%= link_to "#{post.comments.count}コメント", post_path(post.id) %></p>
</div>

<% end %>

