<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-3"><%= @user.name %>さんがフォロー中</h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-12">
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.profile_image.url, :size => '100x100', class: "mt-3 rounded-circle"; %>
          <% end %>
        </div>

        <div class="col-10 pet">
          <span class="name"><%= user.name %>さん</span>
          <p><%= user.introduction %></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>