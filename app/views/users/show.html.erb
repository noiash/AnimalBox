<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mt-3 top-name"><%= @user.name %>さん</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= image_tag @user.profile_image.url, :size => '100x100', class: "mt-3 mb-3 rounded-circle"; %>
      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: 'btn btn-success' %></p>
        <p><%= link_to "ペット登録", new_pet_path(@user), class: 'btn btn-warning' %></p>
      <% end %>
      <div id="follow-btn_<%= @user.id %>">
        <p class="mt-3"><%= render 'relationships/follow_button', user: @user %></p>
      </div>
    </div>

    <div class="col-5">
      <h2 class="hdLine4 mb8p">プロフィール</h2>
      <div class="bgPdg0">
        <dl class="profile">
          <dt>性別</dt>
          <dd><%= @user.sex %></dd>
        </dl>
        <dl class="profile">
          <dt>自己紹介</dt>
          <dd><%= @user.introduction %></dd>
        </dl>
      </div>
    </div>

    <div class="col-4">
      <h2 class="hdLine4 mb8p"><%= @user.name %>さんのペット</h2>
      <% @pets.each do |pet| %>
        <%= link_to pet_path(pet.id) do %>
          <%= image_tag pet.profile_image.url, :width => '30%', class: "mt-3 rounded-circle"; %>
        <% end %>
        <%= pet.name %>
      <% end %>
    </div>
  </div>

<div class="card-list-container py-5">
  <h2 class="hdLine4 mb8p"><%= @user.name %>さんの投稿</h2>
  <div class="row">
  <% @posts.each do |post| %>
  <div class="col-md-4">
    <div class="card mx-auto mt-4 shadow-lg mycard">
    <%= link_to post_path(post.id) do %>
      <% if post.image_id.present? %>
        <%= image_tag post.image_id.url, :width => '100%', class: 'card-imag-top aline-item-center'; %>
      <% else %>
        <%= video_tag(post.video_id.to_s, :controls => true, :width => '100%') %>
      <% end %>
    <% end %>

    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <p><%= image_tag post.user.profile_image.url, :size => '50x50', class: "mt-3 rounded-circle"; %></p>
          <p><i class="fas fa-user"></i><%= post.user.name %></p>
        </div>
        <div class="col-9">
          <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
          <h4 class="card-title"><%= post.title %></h4>
          <p class="card-text"><%= post.introduction %></p>
          <% post.tags.each do |tag| %>
            <%= link_to tag_posts_path(tag_id: tag.id) do %>
              <span class="tag-design"><%= tag.tag_name %></span>
            <% end %>
          <% end %>
          <%# post.tags.each do |tag| %>
            <%#= tag.tag_name %>
          <%# end %>
          <p><%= link_to "#{post.comments.count}コメント", post_path(post.id) %></p>
        </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>


  <%= paginate @posts %>
  </div>
</div>
</div>