<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center pt-5 pb-3">ログイン</h2>
    </div>
  </div>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <p class="form-signin"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enailアドレス' %></p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <p class="form-signin"><%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'パスワード' %></p>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= button_tag type: "submit", class: "btn btn-primary btn-block form-signin" do %>
        <i class="fas fa-paw mr-2"></i>Log in<i class="fas fa-paw ml-2"></i>
      <% end %>
    </div>
  </div>


<% end %>

</div>